<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.MasterLevelActivity">


    <TextView
        android:id="@+id/textView21"
        style="@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/level_master"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        style="@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/select_level"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/button24"
        app:layout_constraintTop_toBottomOf="@id/textView22">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selectone"
                android:layout_width="413dp"
                android:layout_height="138dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/labelone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button12"
                    style="@style/ageButton"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleOne"
                    android:text="@string/rookie"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.096"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelone" />

                <Button
                    android:id="@+id/button13"
                    style="@style/ageButton"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleOne"
                    android:text="@string/medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.146"
                    app:layout_constraintStart_toEndOf="@+id/button12"
                    app:layout_constraintTop_toBottomOf="@+id/labelone" />

                <Button
                    android:id="@+id/button14"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleOne"
                    android:text="@string/advanced"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.098"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button12" />

                <Button
                    android:id="@+id/button15"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleOne"
                    android:text="@string/professional"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.451"
                    app:layout_constraintStart_toEndOf="@+id/button14"
                    app:layout_constraintTop_toBottomOf="@+id/button13" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selecttwo"
                android:layout_width="413dp"
                android:layout_height="138dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectone">

                <TextView
                    android:id="@+id/labeltwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button16"
                    style="@style/ageButton"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleTwo"
                    android:text="Начинающий"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.096"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labeltwo" />

                <Button
                    android:id="@+id/button17"
                    style="@style/ageButton"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleTwo"
                    android:text="Средний"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.146"
                    app:layout_constraintStart_toEndOf="@+id/button16"
                    app:layout_constraintTop_toBottomOf="@+id/labeltwo" />

                <Button
                    android:id="@+id/button18"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleTwo"
                    android:text="Продвинутый"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.098"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button16" />

                <Button
                    android:id="@+id/button19"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleTwo"
                    android:text="Профессиональный"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.451"
                    app:layout_constraintStart_toEndOf="@+id/button18"
                    app:layout_constraintTop_toBottomOf="@+id/button17" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selecttree"
                android:layout_width="413dp"
                android:layout_height="138dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selecttwo">

                <TextView
                    android:id="@+id/labeltree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.088"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button20"
                    style="@style/ageButton"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleThree"
                    android:text="Начинающий"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.096"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labeltree" />

                <Button
                    android:id="@+id/button21"
                    style="@style/ageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:onClick="selectLevelStyleThree"
                    android:text="Средний"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.146"
                    app:layout_constraintStart_toEndOf="@+id/button20"
                    app:layout_constraintTop_toBottomOf="@+id/labeltree" />

                <Button
                    android:id="@+id/button22"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleThree"
                    android:text="Продвинутый"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.098"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button20" />

                <Button
                    android:id="@+id/button23"
                    style="@style/ageButton"
                    android:layout_marginTop="12dp"
                    android:onClick="selectLevelStyleThree"
                    android:text="Профессиональный"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.451"
                    app:layout_constraintStart_toEndOf="@+id/button22"
                    app:layout_constraintTop_toBottomOf="@+id/button21" />
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button24"
        style="@style/buttonPrimary"
        android:layout_marginBottom="28dp"
        android:onClick="nextActivity"
        android:text="@string/resume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>