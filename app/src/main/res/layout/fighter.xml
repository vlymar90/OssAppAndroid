<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fighters_card"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_margin="5dp"
    android:background="@color/gray"
    android:id="@+id/fighter"
    android:onClick="lookAtFighter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/name_fighter"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/age_fighter"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/city_fighter"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/weight_fighter"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/style_fighter"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view_holder_number"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/purple_500" />
</LinearLayout>