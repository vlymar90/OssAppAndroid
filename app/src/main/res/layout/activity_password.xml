<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.PasswordActivity">

    <TextView
        android:id="@+id/textView19"
        style="@style/header"
        android:layout_width="279dp"
        android:layout_height="69dp"
        android:layout_marginTop="128dp"
        android:text="@string/new_password"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userPasswordActivityPassword"
        style="@style/inputtext"
        android:layout_width="340dp"
        android:layout_marginTop="36dp"
        android:background="@color/gray"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:onClick="showPassword"
        android:src="@drawable/oyes"
        app:layout_constraintBottom_toBottomOf="@+id/userPasswordActivityPassword"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordActivityPassword" />

    <TextView
        android:id="@+id/textView20"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:text="Минимум 8 символов"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordActivityPassword" />

    <Button
        android:id="@+id/button9"
        style="@style/buttonPrimary"
        android:layout_marginTop="20dp"
        android:onClick="nextActivity"
        android:text="@string/resume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />
</androidx.constraintlayout.widget.ConstraintLayout>